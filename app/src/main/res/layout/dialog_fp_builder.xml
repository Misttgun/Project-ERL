<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:text="Gimbal Pitch"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                android:id="@+id/gimbal_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:bar_color="#C69E89"
                app:bar_highlight_color="#A54B17"
                app:corner_radius="10"
                app:data_type="_integer"
                app:max_value="90"
                app:min_value="0"
                app:steps="5" />

            <TextView
                android:id="@+id/gimbal_value"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:text="H Increment"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                android:id="@+id/hinc_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:bar_color="#C69E89"
                app:bar_highlight_color="#A54B17"
                app:corner_radius="10"
                app:data_type="_integer"
                app:max_value="15"
                app:min_value="5"
                app:steps="1" />

            <TextView
                android:id="@+id/hinc_value"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:text="V Increment"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                android:id="@+id/vinc_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:bar_color="#C69E89"
                app:bar_highlight_color="#A54B17"
                app:corner_radius="10"
                app:data_type="_integer"
                app:max_value="5"
                app:min_value="1"
                app:steps="1" />

            <TextView
                android:id="@+id/vinc_value"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:text="Nom"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

</LinearLayout>